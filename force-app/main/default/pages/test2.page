<apex:page standardController="Merchandise__c" recordSetVar="Mahi">
    <apex:Form >
    	<apex:pageBlock >
         <apex:pageBlockTable value="{!Mahi}" var="a">
            	<apex:column value="{!a.Name}"/>
            	<apex:column value="{!a.Job_Description__c}"/>
             <apex:column >
                 <apex:inputField value="{!a.price__c}"/>
             </apex:column>
             <apex:column value="{!a.Total_Inventory__c}"/>
            </apex:pageBlockTable>
        
        </apex:pageBlock>
    
    </apex:Form>
</apex:page>